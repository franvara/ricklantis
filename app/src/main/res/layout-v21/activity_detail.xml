<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cd_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/detail_card_margin"
    android:background="@color/card_background"
    card_view:cardCornerRadius="@dimen/detail_card_corner_radius"
    tools:context="com.franvara.ricklantis.presentation.detail.DetailActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_background"
        android:paddingBottom="@dimen/detail_padding_bottom">

        <ImageView
            android:id="@+id/iv_detail_character"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            android:transitionName="@string/transition_imagen"
            app:layout_constraintDimensionRatio="h,4:3"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/character_image_default" />

        <TextView
            android:id="@+id/tv_detail_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/name_background"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="@dimen/margin_16"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"
            android:transitionName="@string/transition_name"
            app:layout_constraintBottom_toBottomOf="@+id/iv_detail_character"
            app:layout_constraintEnd_toEndOf="@+id/iv_detail_character"
            app:layout_constraintStart_toStartOf="@+id/iv_detail_character"
            tools:text="Character name" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@string/detail_status"
            android:textColor="@color/card_text"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_detail_status"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_detail_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:textAlignment="textEnd"
            android:textColor="@color/card_text_answer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/barrier"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail_name"
            tools:text="@string/demo_text" />

        <View
            android:id="@+id/line_separator1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/detail_line_separator_margin"
            android:layout_marginRight="@dimen/detail_line_separator_margin"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@color/card_separator"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_status" />

        <TextView
            android:id="@+id/tv_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@string/detail_species"
            android:textColor="@color/card_text"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_detail_species"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_detail_species"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="textEnd"
            android:textColor="@color/card_text_answer"
            app:layout_constraintEnd_toEndOf="@+id/tv_detail_status"
            app:layout_constraintStart_toStartOf="@+id/tv_detail_status"
            app:layout_constraintTop_toBottomOf="@+id/line_separator1"
            tools:text="@string/demo_text" />

        <View
            android:id="@+id/line_separator2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/detail_line_separator_margin"
            android:layout_marginRight="@dimen/detail_line_separator_margin"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@color/card_separator"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_species" />

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@string/detail_gender"
            android:textColor="@color/card_text"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_detail_gender"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_detail_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/demo_text"
            android:textAlignment="textEnd"
            android:textColor="@color/card_text_answer"
            app:layout_constraintEnd_toEndOf="@+id/tv_detail_species"
            app:layout_constraintStart_toEndOf="@+id/barrier"
            app:layout_constraintTop_toBottomOf="@+id/line_separator2" />

        <View
            android:id="@+id/line_separator3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/detail_line_separator_margin"
            android:layout_marginRight="@dimen/detail_line_separator_margin"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@color/card_separator"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_gender" />

        <TextView
            android:id="@+id/tv_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@string/detail_origin"
            android:textColor="@color/card_text"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_detail_origin"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_detail_origin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/demo_text_2lines"
            android:textAlignment="textEnd"
            android:textColor="@color/card_text_answer"
            app:layout_constraintEnd_toEndOf="@+id/tv_detail_gender"
            app:layout_constraintStart_toEndOf="@+id/barrier"
            app:layout_constraintTop_toBottomOf="@+id/line_separator3" />

        <android.support.constraint.Barrier
            android:id="@+id/barrier_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="tv_origin,tv_detail_origin"
            tools:layout_editor_absoluteY="507dp" />

        <View
            android:id="@+id/line_separator4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/detail_line_separator_margin"
            android:layout_marginRight="@dimen/detail_line_separator_margin"
            android:layout_marginTop="8dp"
            android:background="@color/card_separator"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/barrier_origin" />

        <TextView
            android:id="@+id/tv_last_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@string/detail_last_location"
            android:textColor="@color/card_text"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_detail_last_location"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_detail_last_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/demo_text"
            android:textAlignment="textEnd"
            android:textColor="@color/card_text_answer"
            app:layout_constraintEnd_toEndOf="@+id/tv_detail_origin"
            app:layout_constraintStart_toEndOf="@+id/barrier"
            app:layout_constraintTop_toBottomOf="@+id/line_separator4" />

        <android.support.constraint.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            app:barrierDirection="end"
            app:constraint_referenced_ids="tv_species,tv_status,tv_gender,tv_origin,tv_last_location"
            tools:layout_editor_absoluteX="324dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>