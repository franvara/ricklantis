<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_character_item_clickable"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:padding="@dimen/card_internal_padding"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/zero"
    card_view:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/iv_character"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:transitionName="@string/transition_imagen"
        card_view:srcCompat="@drawable/character_image_default" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#AA000000"
        android:ellipsize="end"
        android:gravity="bottom"
        android:maxLines="2"
        android:paddingBottom="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="16dp"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:transitionName="@string/transition_name"
        tools:text="Character name" />

</android.support.v7.widget.CardView>